---
//library import
import { Image } from "@astrojs/image/components";

// utils import
import { formatDate, slugify } from "../scripts/utils.js";

const { frontmatter, url, tagType } = Astro.props;

const Tag = tagType;

const { title, description, date, category, author, image } = frontmatter;
---

<article class="card">
  <small class="tag">
    <a href={`/category/${slugify(category)}`}>{category}</a>
  </small>
  <a
    href={url}
    aria-hidden="true"
    tabindex="-1"
    class="card-link">
    <Image
      src={image.src}
      alt={image.alt}
      width={600}
      height={300}
      aspectRatio={2/1}
      format="webp"
      fit="cover"
      quality={100}
      class="link-image"
    />
  </a>
  <div class="content">
    <div class="author">
      <Tag>
        <a
          href={url}
          class="card-link"
          >{title}</a
        >
      </Tag>
      <p>
        by <a
          href={`/author/${slugify(author)}`}
          class="card-link"
          >{author}</a
        > â€¢ {formatDate(date)}
      </p>
    </div>
    <p class="description">{description}</p>
    <div class="button read-more"><a href={url} aria-labelledby=`Read more about ${title}`>Read more</a></div>
  </div>
</article>

<style lang="scss">
  .card {
    --background-lighter: 0 0% 14%;
    display: flex;
    flex-direction: column;
    background-color: hsl(var(--background-lighter));
    border-radius: 0.25rem;

    position: relative;
    overflow: hidden;

    :first-child {
      align-self: flex-start;
    }

    small {
      display: flex;
      align-items: center;

      position: absolute;
      top: 0.25rem;
      left: 0.25rem;
    }

    .content {
      display: flex;
      flex-direction: column;
      height: 100%;
      padding: var(--rem-lg);

      .author {
        h2 {
          display: -webkit-box;
          -webkit-line-clamp: 2;
          -webkit-box-orient: vertical;
          overflow: hidden;
          height: 4.5rem;
        }

        p {
          font-size: 0.75rem;
        }
      }

      .card-link {
        color: hsl(var(--font));
        text-decoration: none;

        &:is(:hover, :focus-visible) {
          color: hsl(var(--main-color));
          outline: transparent;

          transition: color 300ms ease;
          
          &:focus-visible {
            background-color: hsl(var(--font));
            color: hsl(var(--background));
          }
        }
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        &:is(:first-child) {
          margin: 0;
        }
      }

      .description {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        margin-block-start: auto;
        height: 3rem;
      }

      .button {
        align-self: flex-end;
      }
    }
  }

  .link-image {
    width: 100%;
    max-height: 150px;
  }

  .tag {
    filter: drop-shadow(2px 2px 2px hsl(var(--background) / 0.3));
  }
</style>

<script>
    import '../scripts/postcard.js';
</script>